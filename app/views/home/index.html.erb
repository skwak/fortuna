<%= link_to "Ask Fortuna a question.", new_question_path, class: "front" %>

<ul class="list-group">
  <% @questions.each do |question| %>
    <li class="list-group-item">
      <div class="show-question">
        <span class="special-question">"<%= question.body %>"</span> <%= link_to "asked #{question.author}", question_path(question) %> on <%= local_time(question.created_at) %>
      </div>
    </li>
  <% end %>
</ul>
