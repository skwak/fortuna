<div class="ask">

<h2>Ask a Question:</h2>
  <%= bootstrap_form_for(@question, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4", url: create_question_path) do |f| %>
    <%= f.text_field :author, :label => "Your Name", :placeholder => "Linnea" %>
    <%= f.text_area :body, :label => "Your Question", :placeholder => "Will today be a good day?" %>

    <div class="span7 col-sm-offset-2">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>

<div class="submissions">
  <ul class="list-group">
  <% @questions.each do |question| %>
    <li class="list-group-item">
      <div class="show-question">
        <span class="special-question">"<%= question.body %>"</span><br>
        <%= link_to "asked #{question.author}", question_path(question) %> on <%= local_time(question.created_at) %><br>
        <span class="fortuna-answer">"<%= question.fortune %>" Fortuna replied.</span>
      </div>
    </li>
  <% end %>
  </ul>
</div>
